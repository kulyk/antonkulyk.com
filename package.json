{
  "name": "blog",
  "private": true,
  "version": "1.0.0",
  "description": "Anton's Blog",
  "scripts": {
    "prettier": "prettier \"src/**/*.+(ts|tsx|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "check-types": "tsc",
    "dev": "next",
    "run-script": "ts-node --project ./src/scripts/tsconfig.json",
    "generate-sitemap": "yarn run-script ./src/scripts/sitemap.ts",
    "generate-feed": "yarn run-script ./src/scripts/rss.tsx",
    "build": "next build",
    "export": "yarn build && yarn generate-sitemap && yarn generate-feed",
    "analyze-bundle": "ANALYZE=true yarn build",
    "validate-project": "npm-run-all check-types check-format lint export"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.0.0",
    "@mavrin/remark-typograf": "^2.1.6",
    "@zeit/next-source-maps": "^0.0.3",
    "classnames": "^2.2.6",
    "csstype": "^3.0.6",
    "date-fns": "^2.17.0",
    "fathom-client": "^3.0.0",
    "feed": "^4.2.2",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "next": "^10.0.6",
    "next-compose-plugins": "^2.2.1",
    "next-mdx-remote": "^2.1.3",
    "next-seo": "^4.19.0",
    "nextjs-sitemap-generator": "^1.3.0",
    "raw-loader": "^4.0.2",
    "react": "^17.0.1",
    "react-console-emulator": "^3.0.5",
    "react-dom": "^17.0.1",
    "rehype": "^11.0.0",
    "rehype-slug": "^4.0.1",
    "remark-external-links": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-prism": "^1.3.4",
    "remark-toc": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@next/bundle-analyzer": "^10.0.6",
    "@types/classnames": "^2.2.11",
    "@types/glob": "^7.1.3",
    "@types/node": "^14.14.25",
    "@types/prismjs": "^1.16.3",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-prismjs": "^2.0.1",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
