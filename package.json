{
  "name": "blog",
  "private": true,
  "version": "1.0.0",
  "description": "Anton's Blog",
  "scripts": {
    "prettier": "prettier \"src/**/*.+(ts|tsx|json)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.tsx .",
    "check-types": "tsc",
    "dev": "next",
    "run-script": "ts-node --project ./src/scripts/tsconfig.json",
    "generate-sitemap": "yarn run-script ./src/scripts/sitemap.ts",
    "build": "next build",
    "export": "yarn build && next export && yarn generate-sitemap",
    "analyze-bundle": "ANALYZE=true yarn build",
    "validate-project": "npm-run-all check-types check-format lint export"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-source-maps": "^0.0.3",
    "classnames": "^2.2.6",
    "csstype": "^2.6.10",
    "date-fns": "^2.13.0",
    "glob": "^7.1.6",
    "gray-matter": "^4.0.2",
    "next": "^9.4.0",
    "next-compose-plugins": "^2.2.0",
    "nextjs-sitemap-generator": "^1.0.0",
    "prismjs": "^1.20.0",
    "raw-loader": "^4.0.1",
    "react": "^16.13.1",
    "react-console-emulator": "^3.0.5",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@next/bundle-analyzer": "^9.3.6",
    "@types/classnames": "^2.2.10",
    "@types/glob": "^7.1.1",
    "@types/node": "^13.13.5",
    "@types/prismjs": "^1.16.0",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.31.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-prismjs": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
